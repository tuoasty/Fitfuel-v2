generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  password String
  phone_number String
  profile Profile?
  @@map(name: "users")
}

model Profile {
  id String @id @default(uuid())
  user User @relation(fields:[userId], references: [id])
  userId String @unique
  weight Float
  height Float
  dateOfBirth DateTime
  dietPreference DietPreference @default(GENERAL)
  activityLevel ActivityLevel @default(MODERATE)
  picture_url String?
  @@map(name: "profile")
}

enum DietPreference {
  GENERAL
  VEGAN
  VEGETARIAN
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  VERY
  EXTRA
}

enum RecipeCategory {
  BREAKFAST
  LUNCH
  DINNER
  ALL
}

model Recipe {
  id String @id @default(uuid())
  name String
  description String
  time String
  calories Int
  protein Int
  carbs Int
  fat Int
  fiber Int
  ingredients String[]
  directions String[]
  picture_url String?
  category RecipeCategory @default(ALL)
  @@map(name: "recipe")
}

model Article {
  id String @id @default(uuid())
  author String
  title String
  content String @db.Text
  picture_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("articles")
}